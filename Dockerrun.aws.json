{
    "AWSEBDockerrunversion":2,
    "containerDefinitions":[
        {
            "name":   "client",
            "image":   "anchalke/multi-client",
            "hostname": "client",
            "essential":    false
        },
        {
            "name":   "server",
            "image":   "anchalke/multi-server",
            "hostname": "api",
            "essential":    false
        },
        {
            "name":   "worker",
            "image":   "anchalke/multi-worker",
            "hostname": "worker",
            "essential":    false
        },
        {
            "name":"nginx",
            "image":   "anchalke/multi-nginx",
            "essential":true,
            "portMappings":[
               {
                   "hostPort":80,
                   "containerPort":80
               }
            ],
            "links":["client", "server"]

        }
        


    ]

}